<!-- A wrapper for all the blog posts -->
<div class="posts">
	<h1 class="content-subhead">Language Overview</h1>
	<!-- A single blog post -->
	<$list filter="[tag[blog-post]tag[active]tag[pinned]]">
		<section class="post">
			<header class="post-header">
				<img class="post-avatar" alt="many-flags" height="48" width="48" src="img/common/tilo-avatar.png">
				<h2 class="post-title">{{!!title}}</h2>
				<p class="post-meta">
					By <a href="#" class="post-author">{{!!creator}}</a> under <a class="post-category post-category-design" href="#">{{!!tags}}</a>
				</p>
			</header>
			<div class="post-description">

				{{!!text}}
			
			</div>
		</section>
	</$list>
</div>
